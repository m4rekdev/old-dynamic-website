doctype html
html(lang="en")
    |!{getComponent(originalLang, "head", { title: attributes.title })}
    body
        .container
            |!{getComponent(originalLang, "navbar", { getIcon })}

            main
                if getProperty(lang, "name") !== getProperty(originalLang, "name") 
                    .message-container
                        span.message.warning #{getString(originalLang, "templateNotTranslated").replace(' {{ language }} ', ` ${getProperty(originalLang, "name")} `)}

                hgroup
                    h1 #{attributes.title}

                    if updated 
                        p.muted Last updated: #{formatDate(originalLang, new Date(updated))}

                .content !{content}

                hr

                if created
                    p.muted Created: #{formatDate(originalLang, new Date(created))}
                
            |!{getComponent(originalLang, "footer")}